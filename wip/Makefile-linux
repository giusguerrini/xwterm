
dest/scrollbar.js: src/scrollbar.js package.json babel.config.js webpack.config.js dest src/example-scroll.js
	#npx babel src --out-dir dest
	npx webpack

src/scrollbar.js: ../src/scrollbar.js src
	cp ../src/scrollbar.js src/scrollbar.js

src/example-scroll.js: example-scroll.js src
	cp example-scroll.js src/example-scroll.js

src:
	mkdir src

dest:
	mkdir dest

package.json:
	npm init -y
	npm install --save-dev @babel/core @babel/cli @babel/preset-env
	npm install --save-dev @babel/plugin-transform-modules-commonjs
	npm install --save-dev webpack webpack-cli
	npm install --save-dev babel-loader
	npm install --save-dev core-js@3 
	
clean:
	rm -rf src dest packahe.json package-lock.json node_modules
